{
    "name": "eslint-plugin-package-jsonc",
    "version": "1.0.0",
    "description": "ESLint plugin to ensure package.json is consistent with package.jsonc",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "lint": "tsc --noEmit && eslint",
        "format": "prettier --write . --log-level warn",
        "test": "node test/package-jsonc.test.js",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin",
        "package.json",
        "package.jsonc",
        "jsonc"
    ],
    "peerDependencies": {
        "eslint": ">=8.0.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.0",
        "@eslint/js": "^9.36.0",
        "@types/eslint": "^9.6.1",
        "@types/node": "^25.2.1",
        "eslint": "^9.39.1",
        "espree": "^11.1.0",
        "globals": "^17.3.0",
        "jiti": "^2.6.1",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.2.0",
        "typescript": "^5",
        "typescript-eslint": "^8.48.0"
    },
    "license": "MIT"
}
